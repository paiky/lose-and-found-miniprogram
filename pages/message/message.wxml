<!--pages/info/info.wxml-->
<view class="container">
  <view class="top">
    <view class="top-icon" bindtap="clickReply">
      <view class="replyme">
        <image src="/icon/Message.svg"></image>
        <i wx:if="{{isReplyMe}}">{{replyMeCount}}</i>
      </view>
      <view>回复我的</view>
    </view>
    <view class="top-icon">
      <view class="systemInfo">
        <image src="/icon/notice (2).svg"></image>
        <i wx:if="{{isSystemInfo}}">{{systemInfoCount}}</i>
      </view>
      <view>系统通知</view>
    </view>
  </view>
  <view class="chatlist">
    <view class="chatlist-title">聊天列表</view>
    <view style="border:1px solid rgb(247,247,247)"></view>
    <scroll-view class="main-content">
      <block wx:for="{{chatList}}" wx:key="index">
        <view class="chatlist-row" bindtap="clickList" data-modal="{{item}}">
          <view class="chatlist-row-left">
            <image src="{{item.headImg}}"></image>
          </view>
          <view class="chatlist-row-mid">
            <view class="chatlist-author">
              {{item.nickName}}
            </view>
            <view class="chatlist-words">
              {{item.message.content}}
            </view>
          </view>
          <view class="chatlist-date">
            <view>{{item.message.date}}</view>
            <!-- <view wx:if="{{messageList[item.toId]}}" class="chatlist-tip">{{messageList[item.toId]}}</view> -->
            <view wx:if="{{item.unread > 0}}" class="chatlist-tip">{{item.unread}}</view>
          </view>
        </view>
      </block>
    </scroll-view>
  </view>
</view>