<view class="container" style="height:{{windowHeight-75}}px">
  <scroll-view style="height:100%" class="chat-view" scroll-y bindscrolltolower="" scroll-with-animation="{{animation}}"
    scroll-into-view="{{toLast}}" upper-threshold="{{10}}" bindscrolltoupper="scrolltoupper">
    <block wx:for="{{chatData}}" wx:key="index">
      <view class="chat-item" id="item{{index+1+(page-1)*10}}">
        <view class="item-date">{{item.date}}</view>
        <view class=" item-content"
          style="{{item.type==0?'display: flex;':'display: flex;flex-direction: row-reverse;'}}">
          <view class="head">
            <image src="{{item.headImg}}"></image>
          </view>
          <view class="content" style="{{item.type==0?'background-color:#ffffff;':'background-color: #A1FFCE;'}}">
            {{item.content}}
          </view>
        </view>
      </view>
    </block>
  </scroll-view>
  <view class=" chat-bottom">
    <textarea class="bottom-input" maxlength="1000" show-confirm-bar="{{false}}" placeholder="评论..." fixed="true"
      auto-height="true" cursor-spacing="44" adjust-position="{{true}}" model:value="{{textareaValue}}"
      bindblur="textareaBlur" bindinput="textareaInput" hold-keyboard="{{hold}}"></textarea>
    <view class="bottom-view2">
      <!-- <image src="/icon/waizui.jpg"></image> -->
      <view class="send" catchtap="clickSend">发送</view>
    </view>
  </view>
</view>