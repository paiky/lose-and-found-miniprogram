/* pages/search/search.wxss */
page{
  background-color: white;
}
.header {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.picker{
  color: red;
  text-decoration: underline;
}
.input-view {
  width: 70%;
  height: 60rpx;
  border-radius: 10px;
  display: flex;
  align-items: center;
  background-color: rgb(240, 240, 240);
}
.input-view image {
  width: 50rpx;
  height: 50rpx;
}
.tipToast{
  margin: 20rpx 0;
  text-align: center;
  font-size: 25rpx;
  color: blue;
}
.main .main-header {
  /* white-space: nowrap; */
  margin-top: 50rpx;
  display: flex;
  justify-content: space-around;
}

.main .main-content-view {
  /* border: 1px solid; */
  margin: 20rpx 0;
  padding: 0 10rpx 10rpx 10rpx;
  background-color: rgb(255, 255, 255);
}

.main-content-header{
  /* border: 1px solid; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-content-time{
  font-size: 32rpx;
  margin-right: 20rpx;
}

.main-content-title {
  /* border: 1px solid; */
  font-weight: 600;
  font-size: 35rpx;
  color: black;
  margin-bottom: 10rpx;
}

.main-content-main {
  display: flex;
  /* border: 1px solid; */
  align-items: center;
  margin-bottom: 10rpx;
}

.main-content-main-left {
  /* border: 1px solid; */
  width: 70%;
  font-size: 25rpx;
  font-size: 30rpx;
}

.main-content-main-left-author {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.main-content-main-left-author image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.main-content-main-left-author text {
  margin-left: 10rpx;
}

.main-content-main-left-content {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.main-content-main-right-image {
  width: 170rpx;
  height: 100rpx;
  /* border: 1px solid; */
  margin-left: 30rpx;
}