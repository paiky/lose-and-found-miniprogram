/* pages/comment/comment.wxss */
page {
  background-color: white;
}

.container {
  /* background-color: black; */
}

.comment-view {
  display: flex;
  margin: 10rpx;
}

.comment-view-left {
  width: 15%;
  padding: 20rpx;
  text-align: center;
}

.comment-view-left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-view-right {
  /* margin-top: 10rpx; */
  padding: 10rpx;
}

.comment-author {
  font-size: 30rpx;
  color: #868686;
}

.comment-date {
  margin-top: 5rpx;
  font-size: 25rpx;
  color: #B3B3B3;
}

.comment-content {
  margin-top: 20rpx;
  color: #202020;
  font-size: 30rpx;
}

.comment-bottom-view {
  /* border: 1px solid red; */
  /* height: 40px; */
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 15px;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom-input {
  max-height: 100px;
  min-height: 25px;
  width: 80%;
  border: 1px solid #e9e9e9;
  border-radius: 20rpx;
  font-size: 30rpx;
  padding: 18rpx 0rpx 10rpx 20rpx;
  background-color: #f4f4f4;
  /* align-items: center; */
  /* margin: 12rpx 23rpx; */
  /* min-height: 17px;
  max-height: 68px;
  line-height: 17px; */
  /* background-color: green; */
}

.send {
  /* border: 1px solid red; */
  font-size: 32rpx;
  margin-right: 10px;
  padding: 18rpx 30rpx 10rpx 0rpx;
}

.comment-bottom {
  margin: 50rpx;
  text-align: center;
  height: 120rpx;
}